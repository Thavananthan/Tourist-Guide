<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/thextback"
    android:layout_margin="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_message"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/images"
        />

    <TextView
        android:id="@+id/recevier_messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/profile_image_message"
        android:background="@drawable/receiver_message_backgroudcolor"
        android:text="receive message"
        android:textColor="@color/thextback"
        android:padding="12dp"
        android:textSize="14sp"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/sender_messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_alignParentTop="@+id/recevier_messageText"
        android:background="@drawable/send_message_backgroud_color"
        android:text="sender message"
        android:textColor="@color/thextback"
        android:padding="12dp"
        android:textSize="14sp"
        android:textStyle="bold"

        />

</RelativeLayout>