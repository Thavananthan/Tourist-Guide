<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/thextback"
    android:layout_margin="3dp"
    tools:context=".ChatActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/message_lists_users"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/thextback"
        android:layout_above="@+id/mylinerlatout"
        android:layout_margin="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/mylinerlatout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/thextback"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/sent_image_file_button"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:src="@drawable/ic_action_camera" />

        <EditText
            android:id="@+id/input_message"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"

            android:hint="write message..."
            android:padding="15dp" />

        <ImageButton
            android:id="@+id/sent_message_button"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:src="@drawable/ic_action_senders" />


    </LinearLayout>
</RelativeLayout>