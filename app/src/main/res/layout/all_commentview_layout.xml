<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/all_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="7dp"
        android:background="@drawable/post_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/comment_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/simplecommenttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="commented on"
                android:textColor="@color/logintext"
                android:textSize="14sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/simplecommentdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textSize="14sp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/displaycommentext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment Will be display here ..."
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/simplecommenttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="time:"
                android:textAlignment="viewEnd"
                android:textSize="14sp"
                android:textStyle="bold"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>