<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/customchat_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/images"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:cropToPadding="true"
        />
    <TextView
        android:id="@+id/custom_chat_usernames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="display username"
        android:textColor="@color/thextback"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:id="@+id/custom_user_lastseen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="last seen"
        android:textColor="@color/thextback"
        android:layout_below="@+id/custom_chat_usernames"
        android:textSize="16sp"
        android:layout_marginTop="26dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

</RelativeLayout>