<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorProfile"
    tools:context=".ViewProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Person_profile_pic"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/images"
                />
            <TextView
                android:id="@+id/Person_profile_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Name"
                android:layout_below="@+id/Person_profile_pic"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/thextback"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/Person_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:layout_below="@+id/Person_profile_fullname"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/thextback"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/Person_profile_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Person_username"
                android:layout_marginTop="5dp"
                android:text="Hey there ,I am using TourGide "
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/logintext"
                android:textSize="22sp"

                />
            <TextView
                android:id="@+id/Person_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Person_profile_status"
                android:layout_marginTop="60dp"
                android:text="Country "
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/thextback"
                android:textSize="18sp"

                />
            <TextView
                android:id="@+id/Person_profile_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Person_country"
                android:layout_marginTop="2dp"
                android:text="Date of Birth "
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/thextback"
                android:textSize="18sp"

                />
            <TextView
                android:id="@+id/Person_profile_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Person_profile_dob"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="50dp"
                android:text="Gender"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/thextback"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/Person_friend_request_btn"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Person_profile_gender"
                android:background="@drawable/button"
                android:layout_marginTop="45dp"
                android:text="Send Friend Request"
                android:textSize="16sp"
                android:textColor="@color/thextback"
                android:layout_centerHorizontal="true"
                />
            <Button
                android:id="@+id/Person_friend_request_cancle_btn"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Person_friend_request_btn"
                android:background="@color/colorAccent"
                android:layout_marginTop="5dp"
                android:text="Cancle Friend Request"
                android:textSize="16sp"
                android:textColor="@color/thextback"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>